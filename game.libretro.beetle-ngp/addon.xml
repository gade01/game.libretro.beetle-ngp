<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.beetle-ngp"
		name="Neo Geo (Beetle NGP)"
		version="0.9.36"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="libgame.libretro.beetle-ngp.so"
                   library_linux="game.libretro.beetle-ngp.so"
                   library_osx="game.libretro.beetle-ngp.dylib"
                   library_windx="game.libretro.beetle-ngp.dll"
                   library_wingl="game.libretro.beetla-ngp.dll">
		<platforms>NGP</platforms>
		<extensions>ngp|ngc</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Beetle NGP v0.9.36.1</summary>
		<description>Based on NeoPop, this emulator is not very accurate in terms of low-level details. However, it is sufficient to play most commercially released games fairly well.

Supported files: .ngp, .ngc

License: GPL v2</description>
		<platform>all</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>
